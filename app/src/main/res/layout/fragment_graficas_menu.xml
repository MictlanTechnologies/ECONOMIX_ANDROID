<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#143B39"
    android:layout_marginBottom="100dp"
    android:padding="16dp">

    <!-- Barra superior con ayuda y perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnAyuda"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ayuda"
            tools:ignore="UseAppTint"
            android:tint="@android:color/white"
            android:background="@drawable/ayuda"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/usuario"
            tools:ignore="UseAppTint"
            android:tint="@android:color/white"
            android:background="@drawable/usuario"/>
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:text="GRAFICAS"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@android:color/white"/>

    <!-- BOTÓN 1: Gastos por Categoría -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGastosCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="GASTOS POR\nCATEGORÍA"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:maxLines="2"
        android:includeFontPadding="false"
        app:cornerRadius="28dp"
        app:backgroundTint="#3E7774"
        app:insetLeft="0dp" app:insetRight="0dp"
        app:insetTop="0dp" app:insetBottom="0dp"/>

    <!-- BOTÓN 2: Ingresos vs Gastos -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnIngresosVsGastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="INGRESOS VS\nGASTOS"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:maxLines="2"
        android:includeFontPadding="false"
        app:cornerRadius="28dp"
        app:backgroundTint="#3E7774"
        app:insetLeft="0dp" app:insetRight="0dp"
        app:insetTop="0dp" app:insetBottom="0dp"/>

    <!-- Empuja el CTA al fondo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Botón VOLVER -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverGraficas"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:minWidth="160dp"
        android:paddingHorizontal="24dp"
        android:text="VOLVER"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:cornerRadius="20dp"
        app:backgroundTint="#91c7de"
        app:insetLeft="0dp" app:insetRight="0dp"
        app:insetTop="0dp" app:insetBottom="0dp"
        android:includeFontPadding="false"/>
</LinearLayout>
