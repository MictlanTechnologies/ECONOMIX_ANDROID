<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/tealSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvMontoAhorro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/softWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPeriodoAhorro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/softWhite"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvFechaAhorro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/economix_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvIngresoReferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/economix_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
