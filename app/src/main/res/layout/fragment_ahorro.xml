<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:layout_marginBottom="100dp"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnAyuda"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ayuda"
                android:tint="@android:color/white"
                tools:ignore="UseAppTint"
                android:contentDescription="Ayuda"
                android:src="@drawable/ayuda" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnPerfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Perfil"
                android:src="@drawable/usuario"
                tools:ignore="UseAppTint"
                android:tint="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:text="Plan de Ahorro"
            android:textColor="@color/softWhite"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAhorroSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:text="Define tu meta, da seguimiento y celebra tus avances"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ahorroCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/tealSurface"
            app:cardCornerRadius="22dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/tealLight"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/softWhite"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/tealAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etObjetivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Objetivo"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundColor="@color/softWhite"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/tealAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DescripciÃ³n"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundColor="@color/softWhite"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/tealAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Meta"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundColor="@color/softWhite"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeColor="@color/tealAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAhorrado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ahorrado"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/labelAvance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Avance"
                    android:textAllCaps="false"
                    android:textColor="@color/goldAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progresoAhorro"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="12dp"
                    android:progress="70"
                    android:indeterminate="false"
                    app:indicatorColor="@color/goldAccent"
                    app:trackColor="@color/softWhite"
                    app:trackCornerRadius="7dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:text="Guardar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/tealAccent"
                app:cornerRadius="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/tealSurfaceVariant"
                app:cornerRadius="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLimpiar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="Limpiar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/tealLight"
                app:cornerRadius="24dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>