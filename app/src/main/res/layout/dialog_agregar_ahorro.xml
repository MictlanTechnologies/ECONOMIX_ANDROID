<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="filled">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMontoAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_monto_aporte"
            android:inputType="numberDecimal"
            android:digits="0123456789.," />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilIngresoAporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:boxBackgroundMode="filled">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/etIngresoAporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_selecciona_ingreso"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvDisponibleIngreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_disponible_ingreso"
        android:textColor="@color/economix_text_secondary"
        android:textSize="12sp" />
</LinearLayout>
