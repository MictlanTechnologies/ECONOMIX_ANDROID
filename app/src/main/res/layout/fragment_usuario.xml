<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:padding="20dp">

    <ImageButton
        android:id="@+id/btnAyudaUs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Ayuda"
        android:padding="4dp"
        android:src="@drawable/ayuda"
        android:tint="@color/white"
        tools:ignore="UseAppTint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="NOMBRE"
        android:textColor="@color/softWhite"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAyudaUs" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Gestiona tu perfil"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombre" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/avatarContainer"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/tealSurface"
        app:cardCornerRadius="120dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Avatar del usuario"
            android:padding="28dp"
            android:scaleType="fitCenter"
            android:src="@drawable/usuariog"
            android:tint="@color/white"
            tools:ignore="UseAppTint" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/actionRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@id/bottomBarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarContainer">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="GUARDAR"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:singleLine="true"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeStepGranularity="1sp"
            app:backgroundTint="@color/tealAccent"
            app:cornerRadius="24dp"
            app:insetLeft="0dp"
            app:insetRight="0dp"
            app:insetTop="0dp"
            app:insetBottom="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLimpiar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:text="LIMPIAR"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:singleLine="true"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeStepGranularity="1sp"
            app:backgroundTint="@color/tealSurfaceVariant"
            app:cornerRadius="24dp"
            app:insetLeft="0dp"
            app:insetRight="0dp"
            app:insetTop="0dp"
            app:insetBottom="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInfo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="INFORMACION"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:singleLine="true"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeStepGranularity="1sp"
            app:backgroundTint="@color/tealLight"
            app:cornerRadius="24dp"
            app:insetLeft="0dp"
            app:insetRight="0dp"
            app:insetTop="0dp"
            app:insetBottom="0dp" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="12dp"
        android:clipToPadding="false"
        android:padding="12dp"
        app:cardBackgroundColor="@color/tealSurfaceVariant"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:showDividers="none">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/navGastos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/tealSurface"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/tealAccent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="72dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/gastosNavBar"
                        android:contentDescription="GASTOS"
                        android:src="@drawable/gastosop2texto1"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/navIngresos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/tealSurface"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/tealAccent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="72dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/ingresosNavBar"
                        android:contentDescription="Ingresos"
                        android:src="@drawable/ingresosconletras1"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/navAhorro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/tealSurface"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/tealAccent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="72dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/ahorroNavBar"
                        android:contentDescription="Ahorro"
                        android:src="@drawable/ahorrotexto1"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/navGraficas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/tealSurface"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/tealAccent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="72dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/graficasNavBar"
                        android:contentDescription="GrÃ¡ficas"
                        android:src="@drawable/graficastexto1"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>